<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leaderbg">

    <!-- Leaderboard Title -->
    <TextView
        android:id="@+id/titleLeaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />


    <!-- Easy Score -->
    <TextView
        android:id="@+id/easyHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy: 0"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/titleLeaderboard"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
     />

    <!-- Medium Score -->
    <TextView
        android:id="@+id/mediumHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium: 0"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/easyHighScore"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
       />

    <!-- Hard Score -->
    <TextView
        android:id="@+id/hardHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hard: 0"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/mediumHighScore"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
      />

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Menu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>
